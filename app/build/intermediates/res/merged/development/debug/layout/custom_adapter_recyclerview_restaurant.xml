<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="9"
            android:orientation="horizontal"
            android:id="@+id/custom_adapter_recyclerview_restaurant_container">
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/blue_grey_1"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:id="@+id/custom_adapter_recyclerview_restaurant_txt_name"
                android:textColor="@color/dot_tutorial_inactive"/>
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/blue_grey_1"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:id="@+id/custom_adapter_recyclerview_restaurant_txt_address"
                android:textColor="@color/dot_tutorial_inactive"/>
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/blue_grey_1"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:id="@+id/custom_adapter_recyclerview_restaurant_txt_openDay"
                android:textColor="@color/dot_tutorial_inactive"/>
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/blue_grey_1"/>
        </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/blue_grey_1"/>
</LinearLayout>