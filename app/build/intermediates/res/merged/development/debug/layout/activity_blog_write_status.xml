<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_deep_orange">

        <ImageView
            android:id="@+id/activity_blog_write_status_btn_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:tint="@android:color/white"
            android:src="@drawable/ic_cancel"
            android:scaleType="centerInside"
            android:layout_margin="2dp"/>

        <ImageView
            android:id="@+id/activity_blog_write_status_txt_emotion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/activity_blog_write_status_btn_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_save"
            android:tint="@android:color/white"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:contentDescription="@null" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <LinearLayout
            android:id="@+id/activity_blog_write_status_ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/activity_blog_write_status_edt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/design_blog_edt_write_status"
                android:focusable="true"
                android:gravity="top"
                android:hint="Share feeling..."
                android:inputType="text|textMultiLine"
                android:textColor="@color/black"
                android:textColorHint="#7a000000" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2d000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/grey"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/activity_blog_write_status_imgbtn_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:background="@drawable/btn_normal"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/camera" />

        <ImageButton
            android:id="@+id/activity_blog_write_status_imgbtn_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:background="@drawable/btn_normal"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/photo" />

        <ImageButton
            android:id="@+id/activity_blog_write_status_imgbtn_felling"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:background="@drawable/btn_normal"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/emoji" />

        <Spinner
            android:id="@+id/activity_blog_write_status_sn_limit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.15"
            android:entries="@+array/limit" />
    </LinearLayout>
</LinearLayout>