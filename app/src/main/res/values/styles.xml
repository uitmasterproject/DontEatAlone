<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme1" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/color_orange_pressed
        </item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:title">#ffffff</item>
        <item name="android:background">#00ffffff</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Toolbar-->
    <style name="Toolbar" />

    <style name="Toolbar.ItemWrapper">
        <item name="android:theme">@style/RippleTheme</item>
        <item name="android:background">@drawable/ripple_selector</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Toolbar.ItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <!--Ripple style-->
    <style name="RippleTheme">
        <item name="colorControlHighlight">#FFF</item>
    </style>

    <style name="RippleItemBackground">
        <item name="android:theme">@style/RippleTheme</item>
        <item name="android:background">@drawable/ripple_selector</item>
    </style>
    <!--End ripple style-->

</resources>
