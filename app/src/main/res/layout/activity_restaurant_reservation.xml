<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_deep_orange">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:gravity="start|center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_arrow_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="7dp">

            <TextView
                android:id="@+id/activity_restaurant_reservation_tv_info"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:background="@drawable/bg_rectangle_radius_left"
                android:gravity="end"
                android:paddingBottom="3dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="3dp"
                android:text="@string/info"
                android:textColor="@color/color_deep_orange"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_restaurant_reservation_tv_reserve"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_radius_right"
                android:gravity="start"
                android:paddingBottom="3dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="3dp"
                android:text="@string/reserve"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/activity_restaurant_reservation_fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>