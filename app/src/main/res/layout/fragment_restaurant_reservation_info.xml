<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:ignore="contentDescription, MissingPrefix">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_restaurant_reservation_info_rv_images"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clipToPadding="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_restaurant_reservation_info_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Display restaurant's name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontPath="fonts/RobotoCondensed-Bold.ttf"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <!--O day hien thi la OPEING or CLOSE => CO THE CHINH THEM MAU BEN FILE JAVA
                OPENING THI MAU CAM CON CLOSE THI MAU NAU-->
                <TextView
                    android:id="@+id/fragment_restaurant_reservation_info_tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:text="Display Status"
                    android:textColor="@color/color_deep_orange"
                    android:textSize="18sp"
                    app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

                <TextView
                    android:id="@+id/fragment_restaurant_reservation_info_tv_open_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display time"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/bt_rectangle_ripple_5_radius"
                android:drawableLeft="@drawable/ic_contact_64"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="0939296324"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grey_1" />

        <!--Danh muc cac dich vu ma noi do cung cap
        O day Nga set trong java neu ma cho nha hang do co cung cap thi mau xanh
        neu khong thi goi icon mau nau " co chu not vao "-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_wifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_wifi_64"
                android:gravity="center"
                android:padding="5dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_airconditioner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_airconditioner"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_outdoor_seats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_not_outdoor_seat_64"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_credit_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_not_credit_card"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_motorcycler_park"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_motorcycle_park"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_car_park"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_car_park"
                android:gravity="center"
                android:padding="5dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grey_1" />

        <TextView
            android:id="@+id/fragment_restaurant_reservation_info_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_locate_64"
            android:drawablePadding="10dp"
            android:paddingBottom="7dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="Display restaurant's address"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

        <TextView
            android:id="@+id/fragment_restaurant_reservation_info_tv_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_collection"
            android:drawablePadding="10dp"
            android:paddingBottom="7dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="7dp"
            android:text="Display types"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

        <TextView
            android:id="@+id/fragment_restaurant_reservation_info_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_price_64"
            android:drawablePadding="10dp"
            android:paddingBottom="7dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="7dp"
            android:text="Display price"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

    </LinearLayout>

    <!--Duoi nay xem xet co nen lam cai gi nua khong nhe. Vi du map chang han :)) -->

</LinearLayout>