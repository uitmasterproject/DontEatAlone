<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_restaurant_reservation_info_rv_images"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:clipToPadding="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@null"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <!--O day hien thi la OPEING or CLOSE => CO THE CHINH THEM MAU BEN FILE JAVA
                    OPENING THI MAU CAM CON CLOSE THI MAU NAU-->
                    <TextView
                        android:id="@+id/fragment_restaurant_reservation_info_tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="@null"
                        android:textColor="@color/color_deep_orange"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/fragment_restaurant_reservation_info_tv_open_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@null"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fragment_restaurant_reservation_info_tv_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/bt_rectangle_ripple_5_radius"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_contact_64"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@null"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey_1" />

            <LinearLayout
                android:id="@+id/ll_service_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/fragment_restaurant_reservation_info_img_wifi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_wifi_64" />

                <ImageView
                    android:id="@+id/fragment_restaurant_reservation_info_img_air_conditioner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_airconditioner" />

                <ImageView
                    android:id="@+id/fragment_restaurant_reservation_info_tv_outdoor_seats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_not_outdoor_seat_64" />

                <ImageView
                    android:id="@+id/fragment_restaurant_reservation_info_tv_credit_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_not_credit_card" />

                <ImageView
                    android:id="@+id/fragment_restaurant_reservation_info_tv_motorcycler_park"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_motorcycle_park" />

                <ImageView
                    android:id="@+id/fragment_restaurant_reservation_info_tv_car_park"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_car_park" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey_1" />

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_locate_64"
                android:paddingBottom="7dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="@null"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_collection"
                android:paddingBottom="7dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:text="@null"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fragment_restaurant_reservation_info_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_price_64"
                android:paddingBottom="7dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:text="@null"
                android:textColor="@color/black"
                android:textSize="17sp" />

        </LinearLayout>

        <!--Duoi nay xem xet co nen lam cai gi nua khong nhe. Vi du map chang han :)) -->

    </LinearLayout>
</ScrollView>