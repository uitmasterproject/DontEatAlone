<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_deep_orange">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="Invite"
            android:layout_marginLeft="5dp"
            android:id="@+id/custom_dialog_require_on_result_invite_txt_title"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_delete"
            android:id="@+id/custom_dialog_require_on_result_invite_img_close"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Full Name:" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="17dp"
                    android:id="@+id/custom_dialog_require_on_result_invite_txt_name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Phone:" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="phone"
                    android:textSize="17dp"
                    android:id="@+id/custom_dialog_require_on_result_invite_txt_phone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Time: "/>
                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="31/05"
                    android:textSize="17dp"
                    android:id="@+id/custom_dialog_require_on_result_invite_txt_date"/>
                <TextView
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:text="08:30"
                    android:textSize="17dp"
                    android:id="@+id/custom_dialog_require_on_result_invite_txt_time"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Place: "/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="KTX khu B, dai hoc quoc gia TP.HCM, Ho Chi Minh"
                    android:textSize="17dp"
                    android:id="@+id/custom_dialog_require_on_result_invite_txt_place"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/custom_dialog_require_on_result_invite_rl_container">
            <Button
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_login"
                android:text="OK"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:id="@+id/custom_dialog_require_on_result_invite_btn_ok"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:id="@+id/custom_dialog_require_on_result_invite_ll_container">
            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_login"
                android:text="View Profile"
                android:textSize="12dp"
                android:id="@+id/custom_dialog_require_on_result_invite_btn_viewprofile"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_login"
                android:text="Accept"
                android:textSize="12dp"
                android:id="@+id/custom_dialog_require_on_result_invite_btn_accept"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_login"
                android:text="Refuse"
                android:textSize="12dp"
                android:id="@+id/custom_dialog_require_on_result_invite_btn_refuse" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>