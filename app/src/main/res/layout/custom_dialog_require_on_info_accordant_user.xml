<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_deep_orange">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="Invite"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_delete"
            android:id="@+id/custom_dialog_require_on_info_account_user_img_close"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/avatar"
                android:id="@+id/custom_dialog_require_on_info_account_user_img_avatar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="17dp"
                android:id="@+id/custom_dialog_require_on_info_account_user_txt_age"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="|"
                android:textSize="23dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_male"
                android:id="@+id/custom_dialog_require_on_info_account_user_img_gender"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Full Name: " />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Phan Thi Hong Hanh"
                android:textSize="17dp"
                android:id="@+id/custom_dialog_require_on_info_account_user_txt_fullname"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Phone: " />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="0979662236"
                android:textSize="17dp"
                android:id="@+id/custom_dialog_require_on_info_account_user_txt_phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Character: "/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="vui ve"
                android:textSize="17dp"
                android:id="@+id/custom_dialog_require_on_info_account_user_txt_character"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Time: "/>
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="31/05"
                android:textSize="17dp"
                android:id="@+id/custom_dialog_require_on_info_account_user_txt_date"/>
            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="08:30"
                android:textSize="17dp"
                android:id="@+id/custom_dialog_require_on_info_account_user_txt_time"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Place: "/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="KTX khu B, dai hoc quoc gia TP.HCM, Ho Chi Minh"
                android:textSize="17dp"
                android:id="@+id/custom_dialog_require_on_info_account_user_txt_place"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_login"
                android:text="View Profile"
                android:textSize="12dp"
                android:id="@+id/custom_dialog_require_on_info_account_user_btn_viewprofile"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_login"
                android:text="Accept"
                android:textSize="12dp"
                android:id="@+id/custom_dialog_require_on_info_account_user_btn_accept"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_login"
                android:text="Refuse"
                android:textSize="12dp"
                android:id="@+id/custom_dialog_require_on_info_account_user_btn_refuse" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>