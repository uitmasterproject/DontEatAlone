<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_deep_orange"
        android:gravity="center"
        android:padding="1dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invite"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/custom_dialog_require_on_info_account_user_img_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ripple_selector"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close_white_36dp"
            android:contentDescription="@null" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp">


        <ImageView
            android:id="@+id/custom_dialog_require_on_info_account_user_img_avatar"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/custom_dialog_require_on_info_account_user_txt_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:textColor="@color/dot_tutorial_inactive"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="|"
                android:textColor="@color/dot_tutorial_inactive"
                android:textSize="21sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/custom_dialog_require_on_info_account_user_img_gender"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_male"
                android:contentDescription="@null" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <!--For name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Full Name:"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/custom_dialog_require_on_info_account_user_txt_fullname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:maxLines="1"
                        android:textColor="@color/color_deep_orange_1"
                        android:textSize="18sp" />


                </LinearLayout>

                <!--For phone-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Phone:"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/custom_dialog_require_on_info_account_user_txt_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="0979662236"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </LinearLayout>

                <!--For targetCharacter-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Character"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/custom_dialog_require_on_info_account_user_txt_character"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="vui ve"
                        android:textColor="@color/black"
                        android:textSize="18dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Style"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/custom_dialog_require_on_info_account_user_txt_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="vui ve"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Food"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/custom_dialog_require_on_info_account_user_txt_food"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="vui ve"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </LinearLayout>

                <!--For timer-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Time"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/custom_dialog_require_on_info_account_user_txt_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="31/05"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Restaurant"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/custom_dialog_require_on_info_account_user_txt_name_restaurant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="KTX khu B, dai hoc quoc gia TP.HCM, Ho Chi Minh"
                        android:textColor="@color/dot_tutorial_active"
                        android:textSize="15sp" />

                </LinearLayout>

                <!--For place-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Address"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/custom_dialog_require_on_info_account_user_txt_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:text="KTX khu B, dai hoc quoc gia TP.HCM, Ho Chi Minh"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp">

            <Button
                android:id="@+id/custom_dialog_require_on_info_account_user_btn_viewprofile"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:background="@drawable/btn_login"
                android:text="View Profile"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/custom_dialog_require_on_info_account_user_btn_accept"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textAllCaps="false"
                android:background="@drawable/btn_login"
                android:text="Accept"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/custom_dialog_require_on_info_account_user_btn_refuse"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textAllCaps="false"
                android:background="@drawable/btn_login"
                android:text="Refuse"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>