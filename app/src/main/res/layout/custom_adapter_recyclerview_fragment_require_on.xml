<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_require_on_custom_cardview_ll_container_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_normal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_require_on_custom_cardview_img_avatar"
                    android:layout_width="100dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_man" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="100dp"
                    android:layout_height="5dp"
                    android:indeterminate="true"
                    android:max="100"
                    android:progress="20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--Name, age and gender-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <!--For name-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingEnd="0dp"
                            android:paddingStart="10dp">

                            <TextView
                                android:id="@+id/fragment_require_on_custom_cardview_txt_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="@string/default_data_name"
                                android:textColor="@color/color_deep_orange_1"
                                android:textSize="19sp" />

                        </LinearLayout>

                        <!--For age and gender-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:orientation="horizontal"
                            android:paddingBottom="2dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="0dp"
                            android:paddingTop="2dp">

                            <ImageView
                                android:id="@+id/fragment_require_on_custom_cardview_img_gender"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_male" />

                            <TextView
                                android:id="@+id/fragment_require_on_custom_cardview_txt_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:gravity="center_vertical"
                                android:text="@string/default_data_age"
                                android:textColor="@color/dot_tutorial_inactive"
                                android:textSize="17sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/fragment_require_on_custom_cardview_txt_percent"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_oval_round_orange"
                            android:gravity="center"
                            android:text="@string/point"
                            android:textColor="@color/color_tab_selected"
                            android:textSize="12sp" />


                        <ImageButton
                            android:id="@+id/fragment_require_on_custom_cardview_ibtn_invite"
                            android:layout_width="45dp"
                            android:layout_height="40dp"
                            android:background="@color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_invite" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/fragment_require_on_custom_cardview_txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/default_address"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/grey">

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>