<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingPrefix,contentDescription">

    <!--Set title and button close-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/custom_dialog_profile_age_rl_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:background="@drawable/ripple_selector"
            android:padding="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_close_grey600_36dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Select your D.O.B"
            android:textColor="@color/color_deep_orange"
            android:textSize="20sp"
            app:fontPath="fonts/RobotoCondensed-Bold.ttf" />

    </FrameLayout>

    <!--Set content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/custom_dialog_profile_wheelpicker_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:wheel_atmospheric="true"
            app:wheel_curtain="true"
            app:wheel_curved="true"
            app:wheel_cyclic="true"
            app:wheel_data="@array/Month"
            app:wheel_indicator="true"
            app:wheel_indicator_color="@color/dot_tutorial_inactive"
            app:wheel_indicator_size="1dp"
            app:wheel_selected_item_text_color="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/custom_dialog_profile_wheelpicker_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:wheel_atmospheric="true"
            app:wheel_curtain="true"
            app:wheel_curved="true"
            app:wheel_cyclic="true"
            app:wheel_data="@array/Day_31"
            app:wheel_indicator="true"
            app:wheel_indicator_color="@color/dot_tutorial_inactive"
            app:wheel_indicator_size="1dp"
            app:wheel_selected_item_text_color="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <com.aigestudio.wheelpicker.widgets.WheelYearPicker
            android:id="@+id/custom_dialog_profile_wheelpicker_year"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:wheel_atmospheric="true"
            app:wheel_curtain="true"
            app:wheel_curved="true"
            app:wheel_cyclic="true"
            app:wheel_indicator="true"
            app:wheel_indicator_color="@color/dot_tutorial_inactive"
            app:wheel_indicator_size="1dp"
            app:wheel_selected_item_text_color="@color/black" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/custom_dialog_profile_age_rl_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_done"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

    </RelativeLayout>

</LinearLayout>