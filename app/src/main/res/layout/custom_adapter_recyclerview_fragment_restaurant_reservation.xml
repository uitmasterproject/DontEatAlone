<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="contentDescription, MissingPrefix">

    <LinearLayout
        android:id="@+id/custom_adapter_recyclerview_fragment_restaurant_reservation_ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/custom_adapter_recyclerview_fragment_restaurant_reservation_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:background="@color/blue_grey" />

        <!--Restaurant info-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">

            <!--Display restaurant's name-->
            <TextView
                android:id="@+id/custom_adapter_recyclerview_fragment_restaurant_reservation_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display restaurant's name"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Display restaurant's address-->
                <TextView
                    android:id="@+id/custom_adapter_recyclerview_fragment_restaurant_reservation_tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="start"
                    android:text="Display restaurant's address"
                    android:textColor="@color/dot_tutorial_inactive"
                    android:textSize="14sp"
                    app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

                <!--Display restaurant's open time-->
                <TextView
                    android:id="@+id/custom_adapter_recyclerview_fragment_restaurant_reservation_tv_open_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_time"
                    android:gravity="start"
                    android:maxLength="9"
                    android:text="lunch"
                    android:textColor="@color/color_deep_orange"
                    android:textSize="14sp"
                    app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Reservation"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:background="@color/color_deep_orange"
            app:fontPath="fonts/RobotoCondensed-Medium.ttf"/>

    </LinearLayout>

</android.support.v7.widget.CardView>