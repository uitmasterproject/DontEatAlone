<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mstb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="@color/font_color_for_require"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="All"
                android:background="@drawable/design_require_off_txt_gender_leftsight_selector"
                android:id="@+id/fragment_require_off_txt_all" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Female"
                android:background="@color/gray"
                android:id="@+id/fragment_require_off_txt_female" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:background="@drawable/design_require_off_txt_gender_rightsight_default"
                android:id="@+id/fragment_require_off_txt_male"/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:id="@+id/fragment_require_off_rl_container_age">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textColor="@color/font_color_for_require"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:textColor="@color/font_color_for_require"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 - 25"
                android:id="@+id/fragment_require_off_txt_age"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:drawable/ic_media_play"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:id="@+id/fragment_require_off_rl_container_address">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/font_color_for_require"
            android:id="@+id/txtAddress"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtAddress"
            android:layout_marginLeft="70dp"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ho Chi Minh"
                android:textColor="@color/font_color_for_require"
                android:id="@+id/fragment_required_off_txt_address"/>
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textSize="10dp"
                android:text="..."
                android:textStyle="bold"
                android:background="@color/tranparent"
                android:textColor="@color/font_color_for_require"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hobby"
            android:textColor="@color/font_color_for_require"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_background_for_hobby"
                android:id="@+id/fragment_require_off_rl_container_hobby_food">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_for_require"
                    android:text="Hobby about food"
                    android:id="@+id/txthobbyfood"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignRight="@id/txthobbyfood"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color_for_require"
                        android:id="@+id/fragment_required_off_txt_hobby_food"/>
                    <Button
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textSize="10dp"
                        android:text="..."
                        android:textStyle="bold"
                        android:background="@color/tranparent"
                        android:textColor="@color/font_color_for_require"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"></LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_background_for_hobby"
                android:id="@+id/fragment_require_off_rl_container_hobby_character">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_for_require"
                    android:text="Hobby about character"
                    android:id="@+id/txthobbycharacter"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignRight="@id/txthobbycharacter"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color_for_require"
                        android:id="@+id/fragment_required_off_txt_hobby_character"/>
                    <Button
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textSize="10dp"
                        android:text="..."
                        android:textStyle="bold"
                        android:background="@color/tranparent"
                        android:textColor="@color/font_color_for_require"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"></LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_background_for_hobby"
                android:id="@+id/fragment_require_off_rl_container_hobby_style">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_for_require"
                    android:text="Hobby about style"
                    android:id="@+id/txthobbystyle"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignRight="@id/txthobbystyle"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color_for_require"
                        android:id="@+id/fragment_required_off_txt_hobby_style"/>
                    <Button
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textSize="10dp"
                        android:text="..."
                        android:textStyle="bold"
                        android:background="@color/tranparent"
                        android:textColor="@color/font_color_for_require"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>