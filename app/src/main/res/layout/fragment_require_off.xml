<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:mstb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    //Filter by

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Filter By"
            android:textColor="@color/dot_tutorial_inactive"
            android:textSize="16sp"
            app:fontPath="fonts/RobotoCondensed-Bold.ttf" />

        <!--Gender-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gender"
                android:textColor="@color/font_color_for_require"
                android:textSize="16sp"
                app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/fragment_require_off_rl_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/design_require_off_txt_gender_leftsight_selector">

                    <TextView
                        android:id="@+id/fragment_require_off_txt_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="5dp"
                        android:text="All"
                        android:textColor="@color/gray"
                        android:textSize="11sp"
                        app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fragment_require_off_rl_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/gray_1">

                    <TextView
                        android:id="@+id/fragment_require_off_txt_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:text="Female"
                        android:textColor="@color/gray"
                        android:textSize="11sp"
                        app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fragment_require_off_rl_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/design_require_off_txt_gender_rightsight_default">

                    <TextView
                        android:id="@+id/fragment_require_off_txt_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:text="Male"
                        android:textColor="@color/gray"
                        android:textSize="11sp"
                        app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <!--Range-->
        <LinearLayout
            android:id="@+id/fragment_require_off_rl_container_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_normal"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Range"
                android:textColor="@color/font_color_for_require"
                android:textSize="16sp"
                app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fragment_require_off_txt_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min - max"
                    android:textColor="@color/dot_tutorial_inactive"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="age"
                    android:textColor="@color/dot_tutorial_inactive"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_arrow_to_left"
                    android:scaleType="centerCrop" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Details About People You Need"
                android:textColor="@color/dot_tutorial_inactive"
                android:textSize="16sp"
                app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

            <!--Food-->
            <LinearLayout
                android:id="@+id/fragment_require_off_ll_container_hobby_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_normal"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/red_dot"
                        android:drawablePadding="10dp"
                        android:text="Food"
                        android:textColor="@color/font_color_for_require"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/fragment_required_off_txt_hobby_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="14sp"
                        app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_require_off_ll_container_hobby_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_normal"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.34">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:drawableLeft="@drawable/green_dot"
                        android:drawablePadding="10dp"
                        android:text="Character"
                        android:textColor="@color/font_color_for_require"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.74"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/fragment_required_off_txt_hobby_character"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="14sp"
                        app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_require_off_ll_container_hobby_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_normal"
                android:orientation="horizontal"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/orange_dot"
                        android:drawablePadding="10dp"
                        android:text="Style"
                        android:textColor="@color/font_color_for_require"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.75"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/fragment_required_off_txt_hobby_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dot_tutorial_inactive"
                        android:textSize="14sp"
                        app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/transparent" />

    <!--location you are looking for-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="The Location You Are Looking For"
            android:textColor="@color/dot_tutorial_inactive"
            android:textSize="16sp"
            app:fontPath="fonts/RobotoCondensed-Bold.ttf" />

        <!--Location-->
        <LinearLayout
            android:id="@+id/fragment_require_off_ll_container_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Location"
                android:textColor="@color/font_color_for_require"
                android:textSize="16sp"
                app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/fragment_required_off_txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ho Chi Minh"
                    android:textColor="@color/dot_tutorial_inactive"
                    android:textSize="14sp"
                    app:fontPath="fonts/RobotoCondensed-Medium.ttf" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>