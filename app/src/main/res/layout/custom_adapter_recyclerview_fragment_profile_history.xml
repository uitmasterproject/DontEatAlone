<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    tool:ignore="MissingPrefix,contentDescription">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="135dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_blue_line" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <!--Time-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:src="@drawable/blue_dot" />

                <TextView
                    android:id="@+id/custom_adapter_recyclerview_fragment_profile_history_tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:fontPath="fonts/Montserrat-Bold.ttf" />

            </LinearLayout>

            <!--Với ai, chỗ này tên khi nhấp vào text phải dẫn đến trang cá nhân của người đó-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6.5dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/blue_dot_05x" />

                <TextView
                    android:id="@+id/custom_adapter_recyclerview_fragment_profile_history_tv_friend_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="With Le Hoang Han"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:fontPath="fonts/Montserrat-Medium.ttf" />

            </LinearLayout>

            <!--Địa điểm ở đâu, chỗ này khi nhấp vào phải dẫn tới cửa hàng đó-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="6.5dp"
                    android:paddingRight="0dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/blue_dot_05x" />

                <TextView
                    android:id="@+id/custom_adapter_recyclerview_fragment_profile_history_tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:maxLines="2"
                    android:paddingLeft="16dp"
                    android:paddingRight="0dp"
                    android:text="Feel Coffee and Tea Express Đại học Nông Lâm TP Hồ Chí Minh."
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:fontPath="fonts/Montserrat-Medium.ttf" />

            </LinearLayout>

            <!--Các button thả tim (vote cho cuộc hẹn), share (để khoe chiến tích), delete để xóa-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingRight="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--Tim-->
                    <RelativeLayout
                        android:id="@+id/custom_adapter_recyclerview_fragment_profile_history_rl_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/custom_adapter_recyclerview_fragment_profile_history_iv_heart"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_heart_black_18dp" />

                    </RelativeLayout>

                    <!--Share-->
                    <RelativeLayout
                        android:id="@+id/custom_adapter_recyclerview_fragment_profile_history_rl_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_share_1" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:background="@color/grey" />

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>