<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_deep_orange"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:padding="10dp">

            <TextView
                android:id="@+id/activity_blog_write_status_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="CANCEL"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:fontPath="fonts/Montserrat-Bold.ttf" />

        </RelativeLayout>


        <TextView
            android:id="@+id/activity_blog_write_status_txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.34"
            android:gravity="center"
            android:text="WRITE BLOG"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontPath="fonts/Montserrat-Bold.ttf" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center_vertical|right"
            android:padding="10dp">

            <TextView
                android:id="@+id/activity_blog_write_status_btn_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POST"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:fontPath="fonts/Montserrat-Bold.ttf" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/activity_blog_write_status_img_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/design_img_avatar"
            android:src="@drawable/avatar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/activity_blog_write_status_txt_nameuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:text="my Name"
                    android:textColor="#c6000000"
                    android:textSize="19sp" />

                <LinearLayout
                    android:id="@+id/activity_blog_write_status_ll_container_feeling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:text="  "
                        android:textColor="#79000000" />

                    <ImageView
                        android:id="@+id/activity_blog_write_status_img_add_icon_feeling"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="2dp"
                        android:background="#00000000" />

                    <TextView
                        android:id="@+id/activity_blog_write_status_txt_add_feeling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#79000000"
                        android:textStyle="bold"
                        app:fontPath="fonts/Montserrat-Bold.ttf" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:weightSum="3"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_blog_write_status_sn_limit"
                    android:background="@drawable/custom_bg_spinner_limit">
                </Spinner>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_border_edt_title"
            android:id="@+id/activity_blog_write_staus_edt_title"
            android:hint="New Blog"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/activity_blog_write_status_ll_container">
            <EditText
                android:id="@+id/activity_blog_write_status_edt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/design_blog_edt_write_status"
                android:focusable="true"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:textColor="@color/black"
                android:textColorHint="#7a000000" />
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2d000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/activity_blog_write_status_imgbtn_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_normal"
            android:padding="10dp"
            android:src="@drawable/camera" />

        <ImageButton
            android:id="@+id/activity_blog_write_status_imgbtn_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_normal"
            android:padding="10dp"
            android:src="@drawable/photo" />

        <ImageButton
            android:id="@+id/activity_blog_write_status_imgbtn_felling"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_normal"
            android:padding="10dp"
            android:src="@drawable/emoji" />

        <ImageButton
            android:id="@+id/activity_blog_write_status_imgbtn_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_normal"
            android:padding="10dp"
            android:src="@drawable/listen" />
    </LinearLayout>
</LinearLayout>